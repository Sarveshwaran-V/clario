{
  "manifest_version": 3,
  "name": "Clario",
  "description": "Understand any tool, instantly. Paste a link or analyze your current page to get started.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "sidePanel",
    "contextMenus"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Clario",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}